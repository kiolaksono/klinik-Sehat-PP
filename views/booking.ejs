<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Klinik Sehat</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>

    <%- include('partials/_navbar') %>

    <% if(error){ %>
        <p style="text-align: center; color: red;"><%= error.split(',').join(' ') %></p>
    <% } %>

    <div class="card mb-3 py-4" style="border: none; justify-content: center; align-items: center;">
        <div style="width: 70%;">
            <form method="post" action="/users/<%=id %>/booking">
                <div class="mb-3" >
                  <label for="exampleInputEmail1" class="form-label">Silahkan pilih Dokter anda</label>
                  <select class="form-select" name="DoctorId">
                      <% data.forEach(el => { %>
                        <option value="<%= el.id %>">
                            <%= el.fullName%>
                        </option>
                    <% }); %>
                  </select>
                </div>
                <div class="mb-3">
                  <label for="dateOfConsul" class="form-label">Tanggal Konsultasi</label>
                  <input type="date" class="form-control" id="dateOfConsul" name="dateOfConsul">
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </form>
        </div>
        
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>